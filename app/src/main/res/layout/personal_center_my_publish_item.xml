<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFF8F8F8"
    android:clickable="true">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/img_recy_item_4_pic"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_recy_item_4_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/img_recy_item_4_pic"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tv_recy_item_4_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="65dp"
                android:layout_toRightOf="@id/img_recy_item_4_pic"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_recy_item_4_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="45dp"
                android:layout_toRightOf="@id/img_recy_item_4_pic"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_recy_item_4_publishTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="25dp"
                android:layout_toRightOf="@id/img_recy_item_4_pic"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_recy_item_4_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/img_recy_item_4_pic"
                android:textSize="18sp" />
        </RelativeLayout>
        <LinearLayout

            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/publish_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFE6212A"
                android:gravity="center"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>

</LinearLayout>
